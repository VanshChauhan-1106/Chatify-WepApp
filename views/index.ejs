<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("includes/favicon.ejs") %>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Chatify</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="./styles/style.css" />
    <script src="sweetalert2.all.min.js"></script>
  </head>
  <body>
    <h1 style="margin: 10px 0px" class="text-center font-bold text-2xl">
      All Chats!
    </h1>
    <div class="w-full flex justify-center">
      <form method="get" action="/chats/new">
        <button
          class="bg-sky-600/40 hover:bg-sky-700 rounded-full p-2 transition-all mx-auto"
        >
          New Chat
        </button>
      </form>
    </div>
    <div class="flex w-full justify-center">
      <div class="container mb-7">
        <% for(let chat of chats) { %>
        <div class="chat-box bg-sky-600/40 justify-between flex flex-col">
          <div>
            <p><i>From </i><%= chat.from %><i> to </i><%= chat.to %></p>
            <div class="msg">
              <div class="snap-y w-full">
                <p class="text-lg">
                  <i class="fa-regular fa-message"></i><%= chat.msg %>
                </p>
              </div>
            </div>
            <!-- <p><i>Received by : <%= chat.to %></i></p> -->
          </div>
          <div>
            <div class="flex mb-1">
              <a href="/chats/<%= chat._id %>/edit"
                ><button
                  class="bg-sky-600/40 hover:bg-sky-700 rounded-full px-4 py-1.5 transition-all text-sm me-2"
                >
                  Edit
                </button></a
              >

              <form
                method="POST"
                action="/chats/<%= chat._id %>?_method=DELETE"
              >
                <button
                  class="bg-sky-600/40 hover:bg-sky-700 rounded-full p-1.5 transition-all text-sm"
                >
                  Delete
                </button>
              </form>
            </div>
            <hr />
            <div class="flex justify-around mt-1">
              <p class="text-sm">
                <%= chat.created_at.toString().split(" ")[4] %>
              </p>
              <p class="text-sm">
                <%= chat.created_at.toString().split(" ").slice(0, 4).join(" ")
                %>
              </p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
